---
// src/pages/proyecto/[id].astro
import Layout from '../../layouts/Layout.astro';
import { projects } from '../../data/projects';

// 1. Generar las rutas estáticas para cada proyecto
export function getStaticPaths() {
  return projects.map((project) => ({
    params: { id: project.id },
    props: { project },
  }));
}

// 2. Obtener los datos del proyecto actual
const { project } = Astro.props;

// Colores dinámicos según el tipo de proyecto
const accentColor = project.type === 'hardware' ? 'text-copper' : 'text-mate-green';
const borderColor = project.type === 'hardware' ? 'border-copper' : 'border-mate-green';
const bgGradient = project.type === 'hardware' ? 'from-copper/10' : 'from-mate-green/10';
---

<Layout title={`${project.title} | Juan González`}>
  <div class="pt-10 pb-20">
    <a href="/#proyectos" class="inline-flex items-center text-gray-500 hover:text-white mb-8 transition-colors">
      ← Volver al laboratorio
    </a>

    <div class="border-b border-gray-800 pb-8 mb-8">
      <div class="flex flex-wrap items-center gap-4 mb-4">
        <span class={`px-3 py-1 rounded text-xs font-mono font-bold bg-white/5 ${accentColor} border ${borderColor}/30`}>
          {project.type.toUpperCase()}
        </span>
        <span class="text-gray-500 font-mono text-sm">ID: {project.id}</span>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">{project.title}</h1>
      <p class="text-xl text-gray-400 max-w-3xl">{project.description}</p>
    </div>

    {/* --- GRID DE CONTENIDO --- */}
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
      
      {/* COLUMNA PRINCIPAL (2/3) */}
      <div class="lg:col-span-2 space-y-8">
        
        {/* Imagen Principal */}
        <div class={`aspect-video rounded-xl overflow-hidden border border-gray-800 bg-gradient-to-br ${bgGradient} to-transparent relative group`}>
            <img 
                src={project.image} 
                alt={project.title} 
                class="h-full w-full opacity-80 group-hover:opacity-100 transition-opacity "
            />
        </div>

        {/* Descripción Detallada */}
        <div class="prose prose-invert prose-lg max-w-none">
            <h3 class="text-white font-bold text-2xl mb-4">Sobre el Proyecto</h3>
            <p class="text-gray-300 leading-relaxed">
                {project.fullDescription}
            </p>
            
        </div>
      </div>

      {/* SIDEBAR TÉCNICO (1/3) */}
      <aside class="space-y-8">
        
        {/* Ficha Técnica */}
        <div class="bg-tech-surface border border-gray-800 rounded-xl p-6">
            <h3 class="text-white font-bold mb-4 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" /></svg>
                Especificaciónes técnicas
            </h3>
            <dl class="space-y-4 font-mono text-sm">
                {project.specs.map(spec => (
                    <div class="flex justify-between border-b border-gray-800 pb-2">
                        <dt class="text-gray-500">{spec.label}</dt>
                        <dd class="text-white text-right">{spec.value}</dd>
                    </div>
                ))}
            </dl>
        </div>

        {/* Botones de Acción */}
        <div class="flex flex-col gap-3">
        {project.repo !== '#' && (
            <a href={project.repo} target="_blank" class={`flex items-center justify-center gap-2 w-full py-3 rounded font-bold transition-all hover:brightness-110 ${project.type === 'hardware' ? 'bg-copper text-black' : 'bg-mate-green text-black'}`}>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" /></svg>
                Ver código fuente
            </a>
        )}
            {project.link !== '#' && (
                 <a href={project.link} target="_blank" class="flex items-center justify-center gap-2 w-full py-3 rounded border border-gray-600 text-white hover:bg-white/5 transition-colors">
                    Ver demo live
                </a>
            )}
        </div>

        {/* Tags */}
        <div class="flex flex-wrap gap-2">
            {project.tags.map(tag => (
                <span class="text-xs font-mono text-gray-400 bg-black/30 px-2 py-1 rounded border border-gray-800">
                    #{tag}
                </span>
            ))}
        </div>

      </aside>

    </div>
  </div>
</Layout>